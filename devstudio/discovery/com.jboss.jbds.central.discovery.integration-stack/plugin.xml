<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
  <extension point="org.eclipse.mylyn.discovery.core.connectorDiscovery">

    <!-- Note - do not modify the siteUrl fields here.  They are based on an ide-config.properties value. -->
    <connectorCategory
       description="JBoss Developer Studio Integration Stack Tools for use with individual JBoss projects (or products)."
       id="com.jboss.jbds.central.discovery.integration-stack.bundle" 
       name="JBoss Developer Studio Integration Stack"
       relevance="90">
      <group id="com.jboss.jbds.central.discovery.integration-stack.bundle-generic" /> 
      <group id="com.jboss.jbds.central.discovery.integration-stack.bundle-bpr" /> 
      <group id="com.jboss.jbds.central.discovery.integration-stack.bundle-ds" /> 
      <group id="com.jboss.jbds.central.discovery.integration-stack.bundle-soa-legacy" />
      <group id="com.jboss.jbds.central.discovery.integration-stack.extras-bpel-examples" /> 
      <group id="com.jboss.jbds.central.discovery.integration-stack.bundle-soa" /> 
    </connectorCategory>

    <!-- JBoss Integration Stack Generic Connector -->
    <connectorDescriptor
       categoryId="com.jboss.jbds.central.discovery.integration-stack.bundle"
       groupId="com.jboss.jbds.central.discovery.integration-stack.bundle-generic"
       certificationId="com.jboss.jbds.discovery.certification.notavailable"
       kind="task"
       license="Free, EPL"
       provider="JBoss by Red Hat"
       siteUrl="${jboss.discovery.site.integration-stack.url}"
       name="JBoss Developer Studio Integration Stack Early Access Components"
       description="Fuse Tooling and Data Virtualization are available by selecting 'Enable Early Access'.  Also available in JBoss Developer Studio 8.x."
       id="jboss.integration-stack.generic.notavailable">  <!-- cannot use the fuse connector ID or we get a conflict when installing via wizard or drag-n-drop install -->
       <icon
          image32="images/jbds_icon32.png">
       </icon>
       <overview
          url="http://devstudio.redhat.com/">
       </overview>
    </connectorDescriptor>

    <!-- JBoss Business Process and Rules Development -->
    <connectorDescriptor
       categoryId="com.jboss.jbds.central.discovery.integration-stack.bundle"
       groupId="com.jboss.jbds.central.discovery.integration-stack.bundle-bpr"
       kind="task"
       license="Free, EPL"
       provider="JBoss by Red Hat"
       siteUrl="${jboss.discovery.site.integration-stack.url}"
       name="JBoss Business Process and Rules Development"
       description="Tools related to business processes and rules development support for BPEL, BPMN2, jBPM, Drools, KIE and Guvnor.  Guvnor is deprecated."
       id="jboss.integration-stack.bundle.bpr">
      <iu id="org.jboss.tools.bpel.feature"/>
      <iu id="org.eclipse.bpmn2.feature"/>
      <iu id="org.eclipse.bpmn2.modeler"/>
      <iu id="org.eclipse.bpmn2.modeler.runtime.jboss"/>
      <iu id="org.drools.eclipse.feature"/>
      <iu id="org.guvnor.tools.feature"/>
      <iu id="org.jbpm.eclipse.feature"/>
      <iu id="org.kie.eclipse.feature"/>
      <iu id="org.kie.eclipse.navigator.feature"/>
      <iu id="org.jboss.tools.runtime.drools.detector.feature"/>
      <iu id="org.jboss.tools.runtime.jbpm.detector.feature"/>
      <icon
        image32="images/jbds_icon32.png">
      </icon>
      <overview
        url="http://devstudio.redhat.com/">
      </overview>
    </connectorDescriptor>

    <!-- JBoss Data Virtualization Development -->
    <connectorDescriptor
       categoryId="com.jboss.jbds.central.discovery.integration-stack.bundle"
       groupId="com.jboss.jbds.central.discovery.integration-stack.bundle-ds"
       kind="task"
       license="Free, EPL"
       provider="JBoss by Red Hat"
       siteUrl="${jboss.discovery.site.integration-stack.url}"
       name="JBoss Data Virtualization Development  (ModeShape is deprecated)"
       description="Tools related to data virtualization such as persistence and transformation - includes support for JCR CND Editor, Teiid Designer and Modeshape."
       id="jboss.integration-stack.bundle.ds">
      <iu id="org.jboss.tools.modeshape.rest.feature"/>
      <iu id="org.jboss.tools.modeshape.jcr.feature"/>
      <iu id="org.teiid.datatools.connectivity.feature"/>
      <iu id="org.teiid.designer.feature"/>
      <iu id="org.teiid.designer.runtime.feature"/>
      <iu id="org.teiid.designer.teiid.client.feature"/>
      <icon
        image32="images/jbds_icon32.png">
      </icon>
      <overview
        url="http://devstudio.redhat.com/">
      </overview>
    </connectorDescriptor>

    <!-- JBoss Integration and SOA Development -->
    <connectorDescriptor
       categoryId="com.jboss.jbds.central.discovery.integration-stack.bundle"
       groupId="com.jboss.jbds.central.discovery.integration-stack.bundle-soa"
       kind="task"
       license="Free, EPL"
       provider="JBoss by Red Hat"
       siteUrl="${jboss.discovery.site.integration-stack.url}"
       name="JBoss Integration and SOA Development"
       description="Tools related to the development of Integration and SOA applications - includes support for BPEL, BPMN2, Drools, jBPM, KIE."
       id="jboss.integration-stack.bundle.soa">
      <iu id="org.eclipse.bpmn2.feature"/>
      <iu id="org.eclipse.bpmn2.modeler"/>
      <iu id="org.eclipse.bpmn2.modeler.runtime.jboss"/>
      <iu id="org.jbpm.eclipse.feature"/>
      <iu id="org.kie.eclipse.feature"/>
      <iu id="org.kie.eclipse.navigator.feature"/>

      <icon
        image32="images/jbds_icon32.png">
      </icon>
      <overview
        url="http://devstudio.redhat.com/">
      </overview>
    </connectorDescriptor>

    <!-- JBoss SOA Legacy Development 
         SOA Tools related to version 5.x of the integration stack - BPEL, Drools, ESB and jBPM 3.
    -->
    <connectorDescriptor
       categoryId="com.jboss.jbds.central.discovery.integration-stack.bundle"
       groupId="com.jboss.jbds.central.discovery.integration-stack.bundle-soa-legacy"
       kind="task"
       license="Free, EPL"
       provider="JBoss by Red Hat"
       siteUrl="${jboss.discovery.site.integration-stack.url}"
       name="JBoss SOA 5.x Development (Deprecated)"
       description="SOA Tools related to version 5.x of the integration stack - BPEL, Drools, ESB, Guvnor and jBPM 3. Guvnor, ESB and jBPM3 are deprecated."
       id="com.jboss.jbds.soatooling.bundle.soap">
      <iu id="org.jboss.tools.bpel.feature"/>
      <iu id="org.eclipse.bpel.apache.ode.runtime.feature"/>
      <iu id="org.drools.eclipse.feature"/>
      <iu id="org.jboss.tools.runtime.drools.detector.feature"/>
      <iu id="org.jboss.tools.esb.feature"/>
      <iu id="org.guvnor.tools.feature"/>
      <iu id="org.jboss.tools.runtime.esb.detector.feature"/>
      <iu id="org.jboss.tools.jbpm.common.feature"/>
      <iu id="org.jboss.tools.jbpm.convert.feature"/>
      <iu id="org.jboss.tools.jbpm3.feature"/>
      <iu id="org.jboss.tools.runtime.jbpm.detector.feature"/>
      <iu id="org.jbpm.gd.jpdl.feature"/> 
       <icon
          image32="images/jbds_icon32.png">
       </icon>
       <overview
          url="http://devstudio.redhat.com/">
       </overview>
    </connectorDescriptor>

  </extension>

</plugin>
